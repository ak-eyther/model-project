# Project Configuration
# This file is auto-generated by setup.py
# Last updated: {{ setup_date }}

project:
  name: "{{ project_name }}"
  slug: "{{ project_slug }}"
  description: "{{ project_description }}"
  admin_email: "{{ admin_email }}"

tech_stack:
  frontend:
    framework: "{{ frontend_framework }}"  # React, Vue, Angular, Svelte, etc.
    language: "{{ frontend_language }}"    # TypeScript, JavaScript
  backend:
    framework: "{{ backend_framework }}"   # FastAPI, Express, Django, Flask, etc.
    language: "{{ backend_language }}"     # Python, Node.js, Go, etc.

deployment:
  frontend:
    platform: "{{ frontend_platform }}"    # Vercel, Netlify, Cloudflare, AWS, etc.
    production_url: "{{ frontend_prod_url }}"
    staging_url: "{{ frontend_staging_url }}"
  backend:
    platform: "{{ backend_platform }}"     # Railway, Render, AWS, GCP, etc.
    production_url: "{{ backend_prod_url }}"
    staging_url: "{{ backend_staging_url }}"

infrastructure:
  version_control: "git"
  ci_cd: "{{ ci_cd_platform }}"           # GitHub Actions, GitLab CI, CircleCI, etc.
  monitoring: "{{ monitoring_platform }}"  # Sentry, Datadog, LogRocket, etc.

features:
  structure_enforcement: {{ enable_structure_enforcement | default(true) }}
  memory_system: {{ enable_memory_system | default(true) }}
  reflection_system: {{ enable_reflection_system | default(false) }}
  automated_cleanup: {{ enable_automated_cleanup | default(false) }}

tier: "{{ tier }}"  # minimal, standard, complete
